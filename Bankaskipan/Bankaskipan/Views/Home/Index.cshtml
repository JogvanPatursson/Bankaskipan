@{
    ViewData["Title"] = "DogeBank - Logon";
}

<div class="container">
    <div style="text-align: center; min-width: 50%; max-width:100%; font-size: 20px; display: inline-block; top: 0;left: 0;bottom: 0;right: 0; position: absolute; margin:30%;">
        <div class="card card-outline-primary m-1 p-1 bg-info text-white">
            <form action="/Customer/Person/Brandur" method="post" id="login-form" class="w-25">
                <h1>Login</h1>
                <p1 class="text-muted">Please type your id and password</p1>
                <input class="form-control" id="user-name" type="text" placeholder="User id" />
                <input class="form-control" id="password" type="password" placeholder="Password" />

                <input type="submit" class="btn btn-outline-dark" value="login" />
            </form>
        </div>
    </div>
</div>