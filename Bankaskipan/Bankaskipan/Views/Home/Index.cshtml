@{
    ViewData["Title"] = "DogeBank - Logon";
}

@model Bankaskipan.Models.LoginForm

<div class="container">
    <div style="text-align: center; min-width: 50%; max-width:100%; font-size: 20px; display: inline-block; top: 0;left: 0;right: 0; position: absolute; margin:30%;">
        <div class="card card-outline-primary m-1 p-1 bg-info text-white">
            <form asp-controller="Home" asp-action="Index" method="post" id="login-form">
                <h1>Login</h1>

                <div class="form-group row">
                    <label asp-for="UserId" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="UserId" class="form-control" placeholder="User ID" />
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                    </div>
                </div>
                <input type="submit" class="btn btn-outline-dark" value="Login" />
            </form>
        </div>
    </div>
</div>