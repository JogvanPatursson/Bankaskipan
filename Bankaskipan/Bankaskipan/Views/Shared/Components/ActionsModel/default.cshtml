@model Bankaskipan.Models.ActionViewModel

<form asp-controller="Customer" asp-action="Action" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Action.Amount" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Action.Amount" class="form-control" placeholder="0" />
        </div>
        <label asp-for="Action.Type" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Action.Type" class="form-control" placeholder="Name" readonly />
        </div>
        <label asp-for="Action.FromAccount" class="col-sm-2 col-form-label">Account</label>
        <div class="col-sm-10">
            <input asp-for="Action.FromAccount" class="form-control" placeholder="@ViewBag.Account.account_id" value="@ViewBag.Account.account_id" readonly />
        </div>
        @if (Model.Action.Type == "Transfer")
        {
        <label asp-for="Action.ToAccount" class="col-sm-2 col-form-label">Receiver</label>
        <div class="col-sm-10">
            <input asp-for="Action.ToAccount" class="form-control" placeholder="00000000000" />
        </div>
        }
        <div class="col-sm-10">
            <input asp-for="UserId" type="hidden" class="form-control" placeholder="Name" value="@ViewBag.Person.userId" />
        </div>
        <div class="col-sm-10">
            <input asp-for="AccountId" type="hidden" class="form-control" placeholder="Name" value="@ViewBag.Account.account_id" />
        </div>
    </div>
    <input type="submit" class="btn btn-outline-dark" value="Submit" />
</form>